<h1>Transactions for <%= @tag.name %></h1>
<a href="/transactions">Return to all transactions</a>

<hr>

<% for transaction in @transactions  %>
  <b>Merchant Name: </b>
  <p><%= transaction.merchants['name'] %></p>
  <b>Amount:</b>
  <p><%= transaction.amount %></p>
  <b>Tag:</b>
  <p><%= transaction.tag['name'] %></p>
  <a href="/transactions/<%= transaction.id%>">View</a>
  <hr>
<% end %>

<b>Total spent on <%= @tag.name %>:</b>

<%= @analysis.total_by_transactions(@transactions)  %>

<p><a href="/tags">Search again</a></p>
<p><a href="/tags/<%= params['id'] %>/edit">Edit Tag</a></p>
<form action="/tags/<%= params['id'] %>/delete" method="post">
  <input type="submit" value="Delete">
</form>
