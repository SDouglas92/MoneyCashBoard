<h1>Transactions for <%= params['name'] %></h1>
<a href="/transactions">Return to all transactions</a>

<hr>

<% for transaction in @transactions  %>
  <b>Merchant Name: </b>
  <p><%= transaction.merchants['name'] %></p>
  <b>Amount:</b>
  <p><%= transaction.amount %></p>
  <b>Tag:</b>
  <p><%= transaction.tag['name'] %></p>
  <a href="/transactions/<%= transaction.id%>">View</a>
  <hr>
<% end %>

<b>Total spent on <%= params['name'] %>:</b>

<%= @analysis.total_by_transactions(@transactions)  %>

<p><a href="/tags">Search again</a></p>
