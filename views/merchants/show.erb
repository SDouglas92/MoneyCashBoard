<h1><%= @merchant.name %></h1>


  <% trans = @merchant.transactions %>

  <table class="shiftmerchanttable">
    <tr>
      <th colspan="3">Transactions at this merchant</th>
    </tr>
    <tr>
      <th>Amount</th>
      <th>Tag</th>
      <th></th>
    </tr>
  <% for tran in trans %>
    <tr>
      <td><%= "%.2f" % tran.amount %></td>
      <td><%= tran.tag['name'] %></td>
      <td><a href="/transactions/<%=tran.id%>">View Transaction</a></td>
    </tr>
  <% end %>
  </table>

  <b>Total Spent at <%= @merchant.name %>: Â£<%= "%.2f" % @analysis.total_by_transactions(trans) %></b>

  <p class="tagshowtext"><a href="/merchants/<%=@merchant.id%>/edit">Edit</a></p>
  <form action="/merchants/<%= @merchant.id %>/delete" method="post" class="showtext">
    <input type="submit" value="Delete">
  </form>

  