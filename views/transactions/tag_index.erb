<h1>Transactions</h1>

<hr>

<% for transaction in @transactions  %>
  <b>Merchant Name: </b>
  <p><%= transaction.merchants['name'] %></p>
  <b>Amount:</b>
  <p><%= transaction.amount %></p>
  <b>Tag:</b>
  <p><%= transaction.tag %></p>
  <a href="/transactions/<%= transaction.id%>">View</a>
  <hr>
<% end %>